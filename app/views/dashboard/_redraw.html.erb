<% if @items.empty? %>
<div class='row' id='empty-dashboard'>&nbsp;</div>
<% else %>
<% num = 0 %>
<% @items.each do |item| %>
  <% if (num % @items_per_row) == 0 %>
      <div class="row">
        <div class="col-md-12">
  <% end %>
          <div class="thumbnail" id=<%= item.name %> >
            <% if item.thumb_exists? %>
              <% thumb_file = "/" + item.thumb_file %>
              <img src=<%= thumb_file %>/>
            <% end %>
            <div class="Caption"><% item.tags.each do |tag| %><span class="item-tag"><%= tag.to_s %></span><% end %></div>
          </div>
  <% if (num % @items_per_row) == (@items_per_row-1) %>
      </div>
    </div>
  <% end %>
  <% num += 1 %>
<% end %>
<% end %>
<% logger.info "Dashboard tags #{session[:active_tags]}" %>
